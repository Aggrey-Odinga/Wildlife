
{{#partial "styles"}}

    <link rel='stylesheet' href='/css/sightingform.css'>

{{/partial}}

{{#partial "content"}}
    <div class="mask rgba-black-light align-items-center">
        <div class="container">
            <div class="indexRow">
                <div class="col-md-12 mb-4 white-text text-center">
                    <h3 class="h1-reponsive text-warning text-uppercase font-weight-bold mb-0 pt-md-5 pt-5 animated wobble"><strong> Record a sighting: </strong></h3>
                    <div class="row">
                        <div class="col-sm-12 col-sm-offset-8">
                            <form action="/sightings" method="post">
                                <div class="form-group">
                                    <label for="animal" class="in-line">Animal Name:</label>
                                    <select id="animal" name="animal" type="text" class="form-control">
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="location">Location:</label>
                                    <select id="location" name="location" type="text" class="form-control transparentInputFields">
                                        <option value="Zone A">Zone A</option>
                                        <option value="Zone B">Zone B</option>
                                        <option value="Zone C">Zone C</option>
                                        <option value="Zone D">Zone D</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="rangerName">Ranger Name:</label>
                                    <input type="text" name="rangerName" class="form-control transparentInputFields">
                                </div>
                                <button class="btn btn-info" type="submit" name="add-sighting">Add Sighting</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{{/partial}}


{{> index.hbs}}